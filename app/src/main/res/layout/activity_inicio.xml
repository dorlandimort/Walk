<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="mx.edu.ulsaoaxaca.walk.activities.InicioActivity"
    android:weightSum="1">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="284dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="10">

        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pasos"
            android:layout_weight="5.97"
            android:textStyle="normal"
            android:textSize="30dp"
            android:width="50dp" />

        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/calorias"
            android:textSize="30dp"
            android:layout_weight="5" />




    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="284dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/txtPasos"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5.97"
            android:textStyle="normal"
            android:textSize="30dp"
            android:width="50dp" />

        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:id="@+id/txtCalorias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp">

        </TextView>






    </LinearLayout>


    <TextView
        android:paddingLeft="10dp"
        android:paddingTop="30dp"
        android:text="Tu dieta"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listDieta" />


</LinearLayout>
